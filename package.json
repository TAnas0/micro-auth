{
  "name": "micro-auth",
  "version": "1.0.0",
  "description": "Auth microservice",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon index.js",
    "lint": "eslint .",
    "migrate-db": "node ./scripts/migrate",
    "rollback-db": "node ./scripts/rollback",
    "seed-db": "node ./scripts/seed-db",
    "prettier": "prettier --write \"{models,web}/**/*.js\"",
    "test-unit": "mocha ./test/setup.js ./**/*.unit.spec.js",
    "test-unit-dev": "mocha --watch ./test/setup.js ./**/*unit.spec.js",
    "test-e2e": "cross-env NODE_ENV=test mocha ./test/setup.js ./**/*.e2e.spec.js",
    "test": "npm run test-unit && npm run test-e2e"
  },
  "author": "vivekimsit@gmail.com",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bookshelf": "^0.13.3",
    "boom": "^7.1.1",
    "cors": "^2.8.4",
    "es6-promisify": "^6.0.0",
    "express": "^4.16.2",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.1.1",
    "knex": "^0.14.4",
    "knex-migrator": "^3.1.6",
    "lodash": "^4.17.5",
    "moment": "^2.20.1",
    "mysql": "^2.15.0",
    "uuid": "^3.2.1",
    "winston": "^3.0.0-rc1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "dotenv": "^5.0.0",
    "eslint": "^4.18.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^5.0.1",
    "nodemon": "^1.15.0",
    "pre-push": "^0.1.1",
    "prettier": "1.12.1",
    "sinon": "^4.3.0",
    "sinon-chai": "^2.14.0",
    "super-request": "^1.2.0"
  },
  "pre-push": [
    "test-unit"
  ]
}
